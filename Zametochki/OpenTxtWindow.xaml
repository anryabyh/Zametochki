<Page x:Class="Zametochki.OpenTxtWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zametochki"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OpenTxtWindow">

    <Grid>
        <TextBox x:Name="tb_title" Height="20" VerticalAlignment="Top"></TextBox>
        <TextBox AcceptsReturn="True" x:Name="tb_text" Margin="0 ,20, 0, 0"/>
        <Button x:Name="btn_save" Width="50" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btn_save_Click"></Button>
    </Grid>
</Page>
